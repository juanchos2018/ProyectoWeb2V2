
@{
    ViewBag.Title = "Index";
}
<!-- Custom styles for this page -->
<link href="~/assets/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

<!-- Button -->
<div class="card-body">
    <button onclick="abrirModal(0)" class="btn btn-success" type="button" data-toggle="modal" data-target="#exampleModalXl">
        <i class="fas fa-plus"></i> Nuevo producto
    </button>
</div>

<!-- Modal Register -->
<div class="modal fade" id="exampleModalXl" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Extra Large Modal</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xl-4">
                        <div class="card">
                            <div class="card-header">Imagen Producto</div>
                            <div class="card-body text-center">
                                <img class="borrar" id="imgFoto" width="100" height="100" style="border: 1px solid" />
                                <div class="small font-italic text-muted mb-4">Recomendación 300x300</div>
                                <input type="file" class="borrar form-control" value="..." id="btnFoto" />
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-8">
                        <div class="card mb-4">
                            <div class="card-header">Detalles Producto</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <input class="form-control" id="txtidempresa" type="hidden">
                                    <input class="borrar form-control" id="txtidproducto" type="hidden">
                                </div>
                                <div class="form-group">
                                    <label>Nombre</label>
                                    <input class="borrar form-control" id="txtnombre" type="text" placeholder="Nombre del producto">
                                </div>
                                <div class="form-group">
                                    <label>Descripción</label>
                                    <textarea class="borrar form-control" id="txtdescripcion" rows="3"></textarea>

                                </div>
                                <div class="form-group">
                                    <label>Precio</label>
                                    <input class="borrar form-control" id="txtprecio" type="text" placeholder="Precio">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    <button onclick="Agregar()" type="button" class="btn btn-success">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">PRODUCTOS</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive" id="tabla">

        </div>
    </div>
</div>


